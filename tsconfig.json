{
  "compilerOptions": {
    "target": "es6",
    "module": "ES2020",
    "outDir": "./lib",
    "sourceRoot": "./src",
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}